{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.removeUnusedImports": "explicit",
  },
  
  "editor.defaultFormatter": "biomejs.biome",
  "cSpell.words": [
    "deepseek",
    "gsap",
    "partialize",
    "pcai",
    "shiki"
  ],
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "i18n-ally.localesPaths": [
    "src/locales"
  ]
}
